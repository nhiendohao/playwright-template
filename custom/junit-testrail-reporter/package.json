{
  "name": "junit-testrail-reporter",
  "version": "1.3.0",
  "description": "Report JUnit test results to TestRail",
  "license": "MIT",
  "bin": {
    "junit-testrail-reporter": "./dist/cli.js"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "scripts": {
    "ci:build": "tsc",
    "ci:lint": "eslint './**/*.@(js|js|ts|ts)'",
    "ci:types": "tsc --noEmit",
    "ci:validate": "npm-run-all ci:lint ci:types",
    "ci:version": "semantic-release"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "keywords": [
    "automation",
    "junit",
    "report",
    "reporter",
    "results",
    "test",
    "testrail"
  ],
  "dependencies": {
    "@dlenroc/testrail": "^1.6.0",
    "chalk": "4.1.2",
    "glob": "^7.2.0",
    "xml2js": "^0.4.23",
    "yargs": "^17.4.0",
    "moment": "^2.22.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.23",
    "@types/xml2js": "^0.4.9",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-package": "^1.3.0",
    "pretty-quick": "^3.1.3",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3"
  }
}
